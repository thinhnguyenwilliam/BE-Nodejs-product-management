doctype html
html
  head
    title #{pageTitle}
    link(rel="icon" href="https://cdn.icon-icons.com/icons2/4233/PNG/512/ryder_canine_patrol_paw_patrol_icon_263849.png" type="image/x-icon")
    
    //-  Bootstrap CSS
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css')
    //-  End Bootstrap CSS

    link(rel="stylesheet", href="/admin/styles/style.css")
  body

    if successMessage.length
      div.alert.alert-success.alert-message(alert-message1)
        each message in successMessage
          p= message

    if errorMessage.length
      div.alert.alert-danger.alert-message(alert-message1)
        each message in errorMessage
          p= message



    include ../partials/header.pug

    .body
      include ../partials/sider.pug
      .main
        block main

    //- nhúng JS tĩnh
    //- đi từ directory 'public'
    script(src='/admin/scripts/main.js')


    //-  Bootstrap JavaScript 
    script(src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js')
    //-  End Bootstrap JavaScript

    