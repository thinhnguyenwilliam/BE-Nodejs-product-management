extends ../../layouts/default.pug
include ../../mixins/box-filter.pug

block main
  h1 Danh sách sản phẩm
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm
    .card-body
      .row
        .col-4
          | Bộ lọc
          - 
            const options = [
              { 
                value: '', 
                text: 'Tất cả' 
              },
              { 
                value: 'active', 
                text: 'Hoạt động' 
              }, 
              { 
                value: 'inactive', 
                text: 'Dừng hoạt động' 
              }
            ];
          - const className = "form-control";
          +selectOptions(options, className)

        .col-8
          | Tìm kiếm
          include ../../partials/box-search.pug

  .card
    .card-header Danh sách sản phẩm
    .card-body
      table.table.table-hover.table-sm.mt-3
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động

        tbody
          each item, index in danhSachVer2
            tr 
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                if item.status == "active"
                  span.badge.badge-success Hoạt động
                else if item.status == "inactive"
                  span.badge.badge-danger Dừng hoạt động
              td
                a.btn.btn-warning.btn-sm(href=`/admin/products/edit/${item._id}`) Sửa
                a.btn.btn-danger.btn-sm.ml-1(href=`/admin/products/delete/${item._id}`) Xóa

  //- Pagination controls
  nav.mt-3
    ul.pagination
      if currentPage > 1
        li.page-item
          button.page-link(button-pagination=currentPage-1) Trang trước
      each pageNumber in [...Array(totalPage).keys()].map(n => n + 1)
        li.page-item
          button.page-link(button-pagination=pageNumber) #{pageNumber}
      if currentPage < totalPage
        li.page-item
          button.page-link(button-pagination=currentPage+1) Kế tiếp



