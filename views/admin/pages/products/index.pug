extends ../../layouts/default.pug
include ../../mixins/box-filter.pug
include ../../mixins/pagination.pug

block main
  h1 Danh sách sản phẩm
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm
    .card-body
      .row
        .col-4
          | Bộ lọc
          - 
            const options = [
              { 
                value: '', 
                text: 'Tất cả' 
              },
              { 
                value: 'active', 
                text: 'Hoạt động' 
              }, 
              { 
                value: 'inactive', 
                text: 'Dừng hoạt động' 
              }
            ];
          - const className = "form-control";
          +selectOptions(options, className)

        .col-8
          | Tìm kiếm
          include ../../partials/box-search.pug

  .card
    .card-header Danh sách sản phẩm
    .card-body
      table.table.table-hover.table-sm.mt-3
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động

        tbody
          each item, index in danhSachVer2
            tr 
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                if item.status == "active"
                  button.badge.badge-success(
                    item-id=item.id,
                    button-change-status="inactive",
                    data-path=`/${prefixAdmin}/products/change-status`
                  ) Hoạt động
                else if item.status == "inactive"
                  button.badge.badge-danger(
                    item-id=item.id,
                    button-change-status="active",
                    data-path=`/${prefixAdmin}/products/change-status`
                  ) Dừng hoạt động
              td
                a.btn.btn-warning.btn-sm(href=`/admin/products/edit/${item._id}`) Sửa
                a.btn.btn-danger.btn-sm.ml-1(href=`/admin/products/delete/${item._id}`) Xóa

  //- Pagination controls
  //- Usage of the pagination mixin
  +pagination(currentPage, totalPage)



