extends ../../layouts/default.pug

block main
  h1 #{pageTitle}
  form(
    action=`/${prefixAdmin}/products/create`
    method="POST"
    enctype="multipart/form-data"
  )
    // Title Input
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )

    // Description Input
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
      )

    // Price Input
    div(class="form-group")
      label(for="price") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value="0"
        min="0"
      )

    // Discount Percentage Input
    div(class="form-group")
      label(for="discount") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value="0"
        min="0"
      )

    // Stock Input
    div(class="form-group")
      label(for="stock") Số lượng
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value="0"
        min="0"
      )

    // Thumbnail URL Input
    div(class="form-group" upload-image)
      label(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail_img_post"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        class="image-preview"
        upload-image-preview
      )

    // Video URL Input
    div(class="form-group")
      label(for="video") Video
      input(
        type="file"
        class="form-control-file"
        id="video"
        name="video_post"
        accept="video/*"
      )

    // ZIP File Input
    div(class="form-group")
      label(for="zipFile") Upload ZIP File
      input(
        type="file"
        class="form-control-file"
        id="zipFile"
        name="zipFile_post"
        accept=".zip"
      )

    // Position Input
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )
      

    // Status Radio Buttons
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-label") Hoạt động

    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động

    // Submit Button
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới
